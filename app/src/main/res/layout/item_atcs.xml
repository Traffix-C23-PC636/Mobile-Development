<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/white"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="8dp"
        android:paddingTop="11dp"
        android:paddingBottom="14dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/tv_nama_persimpangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SmallSp"
            android:textStyle="bold"
            tools:text="SP Soekarno Hatta - Batunungga" />

        <androidx.cardview.widget.CardView
            android:id="@+id/info_card_1"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:padding="3dp"
            app:layout_constraintStart_toStartOf="@+id/tv_nama_persimpangan"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_persimpangan">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_info">

                <androidx.cardview.widget.CardView
                    android:id="@+id/indicator_1"
                    android:layout_width="3dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="5dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:text="@string/kepadatan"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/indicator_1"
                    app:layout_constraintStart_toEndOf="@+id/indicator_1"
                    app:layout_constraintTop_toTopOf="@+id/indicator_1"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/tv_jumlah_kendaraan_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/_50_kendaraan"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toEndOf="@+id/textView6"
                    app:layout_constraintTop_toTopOf="@+id/textView6"
                    tools:ignore="SmallSp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="1dp"
                    android:layout_height="11dp"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/stroke"
                    app:layout_constraintBottom_toBottomOf="@+id/add_since_1"
                    app:layout_constraintEnd_toStartOf="@+id/add_since_1"
                    app:layout_constraintTop_toTopOf="@+id/add_since_1" />

                <TextView
                    android:id="@+id/add_since_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="11dp"
                    android:text="@string/update_2_menit_yang_lalu"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_jumlah_kendaraan_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_jumlah_kendaraan_1"
                    tools:ignore="SmallSp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/info_card_2"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@+id/info_card_1"
            tools:layout_editor_absoluteX="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_info">

                <androidx.cardview.widget.CardView
                    android:id="@+id/indicator_2"
                    android:layout_width="3dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="5dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/kepadatan"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/indicator_2"
                    app:layout_constraintStart_toEndOf="@+id/indicator_2"
                    app:layout_constraintTop_toTopOf="@+id/indicator_2"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/tv_jumlah_kendaraan_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/_50_kendaraan"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/textView7"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    app:layout_constraintTop_toTopOf="@+id/textView7"
                    tools:ignore="SmallSp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="1dp"
                    android:layout_height="11dp"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/stroke"
                    app:layout_constraintBottom_toBottomOf="@+id/add_since_2"
                    app:layout_constraintEnd_toStartOf="@+id/add_since_2"
                    app:layout_constraintTop_toTopOf="@+id/add_since_2" />

                <TextView
                    android:id="@+id/add_since_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="11dp"
                    android:text="@string/update_2_menit_yang_lalu"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_jumlah_kendaraan_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_jumlah_kendaraan_2"
                    tools:ignore="SmallSp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/info_card_3"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@+id/info_card_2"
            tools:layout_editor_absoluteX="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_info">

                <androidx.cardview.widget.CardView
                    android:id="@+id/indicator_3"
                    android:layout_width="3dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="5dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/kepadatan"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/indicator_3"
                    app:layout_constraintStart_toEndOf="@+id/indicator_3"
                    app:layout_constraintTop_toTopOf="@+id/indicator_3"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/tv_jumlah_kendaraan_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/_50_kendaraan"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/textView11"
                    app:layout_constraintStart_toEndOf="@+id/textView11"
                    app:layout_constraintTop_toTopOf="@+id/textView11"
                    tools:ignore="SmallSp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="1dp"
                    android:layout_height="11dp"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/stroke"
                    app:layout_constraintBottom_toBottomOf="@+id/add_since_3"
                    app:layout_constraintEnd_toStartOf="@+id/add_since_3"
                    app:layout_constraintTop_toTopOf="@+id/add_since_3" />

                <TextView
                    android:id="@+id/add_since_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="11dp"
                    android:text="@string/update_2_menit_yang_lalu"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_jumlah_kendaraan_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_jumlah_kendaraan_3"
                    tools:ignore="SmallSp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>